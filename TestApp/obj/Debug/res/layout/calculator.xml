<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/profile">
    <TextView
        android:text="Type in Age"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textColor="@android:color/black" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g 30"
        android:id="@+id/editText1"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />
    <TextView
        android:text="Type in Height in cm"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/textView2" />
    <EditText
        android:hint="e.g 178"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/editText2"
        android:textColorHint="@android:color/darker_gray" />
    <TextView
        android:text="Type in Weight in kg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/textView3" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g 70"
        android:textColor="@android:color/black"
        android:id="@+id/editText3"
        android:textColorHint="@android:color/darker_gray" />
    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup1">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Female"
            android:textColor="@android:color/black"
            android:id="@+id/radioButton1" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="@android:color/black"
            android:id="@+id/radioButton2" />
    </RadioGroup>
    <TextView
        android:text="Select activity level below"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/levelActivity" />
    <Spinner
        android:id="@+id/spinneren"
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:prompt="@string/activity_prompt"
        android:popupBackground="@android:color/holo_orange_light"
        android:layout_y="20dp"
        android:background="@android:color/holo_green_light" />
    <Button
        android:text="Calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/results" />
    <TextView
        android:text="Results: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/textView4" />
</LinearLayout>