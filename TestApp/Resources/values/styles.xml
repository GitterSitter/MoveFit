<?xml version="1.0" encoding="utf-8"?>
<resources>


  <style name="customtheme" parent="@android:style/Theme.Light">
    <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
  </style>
  <style name="SpinnerItem">
    <item name="android:textColor">#993399</item>
    <item name="android:background">@drawable/my_rectangle</item>
  </style>
  <style name="SpinnerDropDownItem">
    <item name="android:textColor">#993399</item>
    <item name="android:background">@drawable/my_rectangle</item>
  </style>
  

  
<!--This is style for the dialog fragment. It displays the animation for sliding up, and right.-->
    <style name="dialog_animation">
		<item name="android:windowEnterAnimation">@anim/slide_up</item>
		<item name="android:windowExitAnimation"> @anim/slide_right </item>
	</style>

<!--	These are styles for the side-menu -->
		<style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">#2196F3</item>
		<item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
	</style>

  <style name="Theme2" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#2196F3</item>
    <item name="windowNoTitle">true</item>
  </style>

	<style name="MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="color">#F5F5F5</item>  <!-- #   -->
		<item name="spinBars">true</item>
	</style>

	 <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>

